{
    "name": "@pengubot/eslint-config",
    "version": "2.0.0",
    "description": "PenguBot's ESLint and TypeScript Configuration",
    "main": "dist/index.js",
    "repository": "https://github.com/PenguBot/eslint-config.git",
    "author": "@pengubot",
    "license": "MIT",
    "private": false,
    "scripts": {
        "clean": "tsc -b src --clean",
        "build": "tsc -b src",
        "test": "eslint --ext ts src",
        "sversion": "yarn standard-version"
    },
    "peerDependencies": {
        "@quantumly/eslint-config": "^1.1.0",
        "@typescript-eslint/eslint-plugin": "^3.7.0",
        "@typescript-eslint/parser": "^3.7.0",
        "eslint": "^7.5.0",
        "eslint-plugin-tsdoc": "^0.2.6",
        "typescript": "^3.9.7"
    },
    "devDependencies": {
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-conventional": "^9.1.2",
        "@quantumly/eslint-config": "^1.1.0",
        "@types/node": "^14.6.0",
        "@typescript-eslint/eslint-plugin": "^3.9.1",
        "@typescript-eslint/parser": "^3.9.1",
        "cz-conventional-changelog": "^3.2.0",
        "eslint": "^7.7.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-tsdoc": "^0.2.6",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "standard-version": "^9.0.0",
        "typescript": "^4.0.2"
    },
    "files": [
        "dist",
        "!dist/.tsbuildinfo",
        "tsconfig.json"
    ],
    "engines": {
        "node": ">=14",
        "npm": ">=6"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "yarn lint-staged"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix --ext ts"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "publishConfig": {
        "access": "public"
    }
}
